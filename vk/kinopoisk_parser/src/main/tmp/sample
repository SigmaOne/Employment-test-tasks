                    $(function(){
                        var vote = 0;
                        var title_post = [ vote + ' новый пост за сутки', vote + ' новых поста за сутки', vote + ' новых постов за сутки']
                        var bgpos ='left -' + (vote - 1) * 22 + 'px';
                        if (vote > 99) {
                            $('.numbers').css('background-position', 'left bottom');
                        } else if (vote == 0) {
                            $('.numbers').css('display', 'none');
                        } else {
                            $('.numbers').css('background-position', bgpos);
                        }
                        var decOfNum = function(number, titles) {
                            cases = [2, 0, 1, 1, 1, 2];
                            $('.numbers').attr('title', titles[ (number%100>4 && number%100<20)? 2 : cases[(number%10<5)?number%10:5] ]);
                        }
                        decOfNum(vote, title_post);
                        $('.formReviewAncor').on("click", function(){
                            var topNum = $('#forma').offset().top;
                            $('html, body').animate({scrollTop: topNum}, 500);
                            return false;
                        });
                    });
