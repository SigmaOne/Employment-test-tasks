        function ShowBrandVideo() {
            var w=720;
            var h=404;
            $('#spec_trailer').css({"display":"block"});
            $('#spec_trailer').css({"height":((h+20)+"px"),"width":"100%"});
            $('#spec_trailer_bg').css({"height":((h+45)+"px"),"width":"100%"});
            $('#fc_player_1').css({"width": w+"px"});
            $('#superb').css({"opacity":"0", "height": "160px"});
            $('.casual_link_nav').css({"display":"none"});
            $('.buyTicket').css({"display":"none"});
            $('.top_index_switch').css({"display":"none"});

            $('#fc_player_1').html("<a class='close' href='#' onclick='HideBrandVideo(); return false;' ></a><div id='fc_playermovie_' >Вам необходимо обновить Flash Player.</div>");
            getPlayer("https://storage.mds.yandex.net/get-video-an/63428/15849de579a/e4892d425872388d/0.flv?redirect=yes&sign=8a23b1a3c78519e3ba68375d387a7ce88fafbb3257fb95e8e7cd6e4a823b0d5b&ts=6aef4e90","", w,h, true,"movie_",false,"no");

            $('#fc_player_1 object,#fc_player_1 embed').css({
                "width":(w+"px"),
                "height":(h+"px")
            });

            var matches = 'https://storage.mds.yandex.net/get-video-an/63428/15849de579a/e4892d425872388d/0.flv?redirect=yes&sign=8a23b1a3c78519e3ba68375d387a7ce88fafbb3257fb95e8e7cd6e4a823b0d5b&ts=6aef4e90'.match(/[0-9]+/);
            var filmId = matches && matches[0];
            sendMetrikaTrailerStartParams('', filmId, 'movie_', 'branding');
        }

        function HideBrandVideo()
        {
            $('#spec_trailer').css({"display":"none"});
            $('#fc_player_1').html('');
            $('#superb').css({"opacity":"1", "height": "242px"});
            $('.casual_link_nav').css({"display":"block"});
            $('.buyTicket').css({"display":"block"});
            $('.top_index_switch').css({"display":"block"});
