    var awTimer2Close;
    $('#btn_award').mouseover(function(){
        clearTimeout(awTimer2Close);
        awTimer2Open = setTimeout(function(){
            $('#awardPopUp').fadeIn(400, function(){});
        }, 500);
    });
    $('#awardPopUp').mouseover(function(){
        clearTimeout(awTimer2Close);
    });
    $('#btn_award').mouseout(function(){
        clearTimeout(awTimer2Open);
    });
    $('#btn_award, #awardPopUp').mouseout(function(){
        awTimer2Close = setTimeout(function(){
            $('#awardPopUp').fadeOut(400, function(){});
        }, 500);
    });
});
